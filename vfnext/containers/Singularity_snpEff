Bootstrap: docker
From: continuumio/miniconda3:4.7.12

%post
apt-get update -y && \
 apt-get install -y procps

CONDA_EXPERIMENTAL_SOLVER=classic conda install -n base conda=22.11.0
CONDA_EXPERIMENTAL_SOLVER=classic conda install -n base conda-libmamba-solver=22.12
conda config --set solver libmamba

conda install -c bioconda samtools=1.9 freebayes snpeff=5.0=hdfd78af_2 entrez-direct --force-reinstall

%runscript
cd /
exec /bin/bash "$@"

%startscript
cd /
exec /bin/bash "$@"
